# Database Configuration
MONGODB_URI=mongodb://localhost:27017/curation-engine
MONGODB_TEST_URI=mongodb://localhost:27017/curation-engine-test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
SESSION_SECRET=your-session-secret

# API Configuration
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Content Analysis APIs
# NOTE: BoundaryML integration is conceptual - replace with real service
CONTENT_ANALYSIS_API_URL=http://localhost:3002
MOCK_CONTENT_ANALYSIS=true

# Real content analysis service (replace with actual service)
REAL_CONTENT_API_KEY=your-real-content-analysis-api-key
REAL_CONTENT_API_URL=https://api.your-content-service.com

# Age Verification Service
AGE_VERIFICATION_API_URL=http://localhost:3003
AGE_VERIFICATION_API_KEY=your-age-verification-key
MOCK_AGE_VERIFICATION=true

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_REAL_CONTENT_ANALYSIS=false
ENABLE_MOCK_DATA=true
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGGING=true

# External Integrations
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Development
NODE_ENV=development
DEBUG=curation-engine:*
